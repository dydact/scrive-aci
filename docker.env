# Local Development Environment Variables
# Use this file with: docker-compose --env-file docker.env up

# HTTP/HTTPS Port mappings for local development
HOST_HTTP_PORT=8080
HOST_HTTPS_PORT=8443

# Database Configuration (matches docker-compose.yml)
DB_HOST=mysql
DB_NAME=openemr
DB_USER=openemr
DB_PASS=openemr

# OpenEMR Configuration
OPENEMR_BASE_PATH=/var/www/localhost/htdocs/openemr
SITE=americancaregivers

# Application Settings
APP_ENV=development

# OpenEMR Setup
OE_USER=admin
OE_PASS=pass

# MySQL Configuration
MYSQL_ROOT_PASSWORD=root
MYSQL_USER=openemr
MYSQL_PASSWORD=openemr
MYSQL_DATABASE=openemr 